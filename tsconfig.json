{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "paths": {
      "typed-storefront": ["./src"]
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
